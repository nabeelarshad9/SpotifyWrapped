<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spotifywrapper20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_teal</item>
        <item name="colorPrimaryVariant">@color/bright_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/blueish</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nicer_blue</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>

    </style>
    <!-- Light Mode -->
    <!-- Screen bg if light mode on -->
    <style name="SCREEN">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>
    <!-- Text bg if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/purple</item>
    </style>
    <!-- Button bg if light mode on -->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="navcolor">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>
    <style name="CreateAccountBG">
        <item name="android:backgroundTint">#CCB7F3</item>
        <item name="android:background">#CCB7F3</item>
    </style>
    <style name="TEXTCreateAcc">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BACKGROUND">
        <item name="android:background">@drawable/loginbackground2</item>
    </style>
    <style name="LOGINUPW">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SumBG">
        <item name="android:background">@color/purple</item>
    </style>




</resources>